{% extends 'admin/layout.html.twig' %}

{% form_theme form _self %}

{% block _attribute_configuration_choices_widget %}
<button type="button" class="btn btn-success mb-2 collection-add">
  <i class="fas fa-plus"></i>
</button>
<div class="collection" data-prototype="{{ form_widget(form.vars.prototype)|e('html_attr') }}">
{% for child in form %}
  {{ form_widget(child) }}
{% endfor %}
</div>
{% endblock _attribute_configuration_choices_widget %}

{% block _attribute_configuration_choices_entry_widget %}
<div class="input-group collection-items mb-2">
  {{ form_widget(form) }}
  <div class="input-group-append">
    <button type="button" class="btn btn-danger collection-remove">
      <i class="fas fa-trash-alt"></i>
    </button>
  </div>
</div>
{% endblock _attribute_configuration_choices_entry_widget %}

{% block content %}
  <div class="mb-3">
    <a href="{{ path('admin_attribute') }}" class="btn btn-light">&laquo;&nbsp;{{ 'app.back'|trans }}</a>
  </div>

  {{ form_start(form) }}
    {{ form_row(form.type) }}
    {{ form_row(form.name) }}
    {{ form_row(form.configuration) }}

    <div class="form-group row">
      <div class="col-sm-10 ml-auto">
        <button type="submit" class="btn btn-primary">{{ 'app.submit'|trans }}</button>
      </div>
    </div>
  {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(function() {
  var $collection = $('[data-prototype]')
  $collection.on('click', '.collection-remove', function(event) {
    var $el = $(event.currentTarget)
    var $item = $el.closest('.collection-items')
    var $input = $item.find('input')
    if ('' === $.trim($input.val()) || true === confirm('Are you sure ?')) {
      $item.remove()
    }
  })

  $('.collection-add').on('click', function(event) {
    var $items = $collection.find('.collection-items')
    var prototype = $collection.data('prototype')
        prototype = prototype.replace(/__name__/g, $items.length)
    $(prototype).appendTo($collection)
      .find('input:first')
      .focus()
  })
});
</script>
{% endblock %}
